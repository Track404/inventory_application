<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <div><a href="/category">Category</a> <a href="/">Movies</a></div>
    <ul>
      <% categories.forEach(category => { %>
      <li>Name: <%= category.name %></li>
      <button>
        <a href="/category/<%= category.id %>/update">Update</a>
      </button>
      <form
        action="/category/<%= category.id %>/delete"
        method="POST"
        style="display: inline"
      >
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this user?');"
        >
          Delete
        </button>
      </form>
      <% }); %>
    </ul>
    <a href="/category/new">Add new Category</a>
  </body>
</html>
